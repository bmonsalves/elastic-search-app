<h1>Articles</h1>

<%= form_tag article_index_path, method: :get do %>
  <p>
    <%= text_field_tag :query, params[:query] %>
    <%= submit_tag "Search", name: nil %>
  </p>
<% end %>

<div id="articles">
  <% if @total.present? %>
    <b>total: <%= @total %></b>
  <% end %>
  <% @articles.each do |article| %>
    <h2>
      <%=  article.title %>
    </h2>
    <!--div class="info">
    </div-->
    <div class="content"><%= article.text %></div>
  <% end %>
</div>
